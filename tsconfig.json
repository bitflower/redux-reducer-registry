{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "declaration": true,
    // "esModuleInterop": true, // TODO: activate !
    "experimentalDecorators": true,
    "noEmitOnError": false,
    "outDir": "./esm",
    "watch": false,
    "lib": [
      "es2017"
    ],
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/@types/*",
        "*"
      ]
    }
  }
}